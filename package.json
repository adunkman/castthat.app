{
  "name": "castthat.app",
  "private": true,
  "version": "1.0.0",
  "description": "Cast dashboards at any URL to your TV non-interactively without tab mirroring.",
  "scripts": {
    "start": "serve dist",
    "eslint": "eslint **/*.js",
    "stylelint": "stylelint **/*.scss",
    "pa11y": "start-server-and-test start 5000 pa11y-ci",
    "pa11y-ci": "pa11y-ci --sitemap http://localhost:5000/sitemap.xml --sitemap-find https://www.castthat.app --sitemap-replace http://localhost:5000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adunkman/castthat.app.git"
  },
  "author": "Andrew Dunkman <adunkman@gmail.com> (https://www.dunkman.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adunkman/castthat.app/issues"
  },
  "homepage": "https://github.com/adunkman/castthat.app#readme",
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.4",
    "pa11y-ci": "^2.1.1",
    "serve": "^10.1.1",
    "start-server-and-test": "^1.7.11",
    "stylelint": "^9.10.1",
    "stylelint-config-airbnb": "0.0.0"
  }
}
